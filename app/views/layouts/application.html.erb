<!DOCTYPE html>
<html>
<head>
  <title>Usermodel</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="container">
    <div class="user_header">
        <% if current_user %>
            Logged in as: <%= current_user.email %> | <%= link_to 'Admin Dashboard', "/dashboard" %> | <%= link_to 'Sign up', new_user_path %> | <%= link_to 'Log out', logout_path %>
        <% else %>
            <%= link_to 'Log in', new_session_path %>
        <% end %>
    </div>
    <%= yield %>
</div>

</body>
</html>
